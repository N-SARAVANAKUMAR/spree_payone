<fieldset data-hook="e_wallet">
  <legend><%= t(:e_wallet) %></legend>

  <table class="index">
    <tr>
      <th colspan="2"><%= t(:details) %></th>
    </tr>
    <tr>
      <td><%= label_tag nil, t(:wallet_type) %>:</td>
      <td>
        <%= t(PayOne::Utils::WalletType.validate_symbol(payment.source.wallet_type)) %>
      </td>
    </tr>
  </table>
</fieldset>